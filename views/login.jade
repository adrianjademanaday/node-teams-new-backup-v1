doctype html
html
	head
		title BEAMS Login

		link(rel='stylesheet', href='resources/css/bootstrap.min.css')
	body
		.container
			include _includes/header

			.row
				.col-md-4.col-md-offset-4
					form.form-signin(method='POST', action='login', role="form")
						h2.form-signin-heading Please sign in
						input.form-control(name='username', type='text', placeholder='Username', required='', autofocus='')
						input.form-control(type='password' name='password', placeholder='Password', required='')
						label.checkbox
							input(type='checkbox', value='remember-me')
							| Remember me
						button.btn.btn-lg.btn-primary.btn-block(type='submit') Login	

			include _includes/footer